<% content_for :content do %>

<div class="main">
    <% if @fb_user and @flickr_user %>
        <div class="alert-message block-message success">
            <div class="row">
                <div class="transfer-info">
                Photos from <a href="http://flickr.com/<%= @user.flickr_user_nsid %>"> <%= @flickr_user %> </a> in Flickr to be moved to  <a href="http://facebook.com/<%= @fb_user.user %>"><%= @fb_user.fb_first_name %> </a> in Facebook.
                </div>
            </div>
            <div class="row">
                <div class="share">
                    If you liked this service, let your friends know!
                    <a name="fb_share" share_url="http://export.goyaka.com">Share with Friends!</a> 
                    <script src="http://static.ak.fbcdn.net/connect.php/js/FB.Share" type="text/javascript">
                    </script>
                </div>
            </div>
        </div>
        
        <ul class="tabs navtab">
          <li class="first"><a href="/migrate">Move photos</a></li>
          <li class="active"><a href="/status">Uploaded photos</a></li>
        </ul>
        <div id="sets" class="row">
            <div class="pull-right">
            <a href="/status" class="btn small"> <img src="/assets/refresh.png" style="vertical-align: middle;"> Refresh</a>
            </div>
            <div class="refresh alert-message info block-message">Once photos are uploaded, share with your friends. 
                <a data-controls-modal="modal-share-friends" data-backdrop="true" data-keyboard="true" class="btn small" href="#" id="share-with-friends">See how</a></div>
            <div id="queue"></div>
        </div>
    <% else %>
    <% end %>
</div>

<script type="text/javascript">
var fb_user;
var flickr_user;
<% if @fb_user %>
fb_user = "<%= @fb_user %>";
<% end %>
<% if @flickr_user %>
flickr_user = "<%= @flickr_user %>";
<% end %>
</script>

<% if @fb_user and @flickr_user %>

<script id="inqueue_sets_list_template" type="text/x-jquery-tmpl">
<div>
        <div class="sets">
            {{each(index, set) sets}}
                <div class="set">
                    <label>
                        <div class="cover">
                            <img class="thumb" id="${set.primary}" src="http://farm${set.farm}.staticflickr.com/${set.server}/${set.primary}_${set.secret}_s.jpg" style="margin: 0 auto; display: block">
                            <div class="progressbar" data="${set.progress.percent}"><div class="fill" style="width:${set.progress.percent}%">&nbsp;</div><div class="data">${set.progress.done}/${set.progress.total}</div></div>
                        </div>
                    </label>
                    <div class="thumb-title">
                        ${set.title}<br/>
                        <a target="_blank" href="http://flickr.com/photos/<%= @user.flickr_user_nsid %>/sets/${set.id}">
                            <img style="vertical-align: middle" src="/assets/flickrico.png">
                        </a>
                        {{each(idx, album) set.fb_albums}}
                            <a href="http://facebook.com/${album}"><img style="vertical-align: middle" src="/assets/fbico.png"></a>
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        </div>
</div>
</script>

<script id="uploaded_sets_list_template" type="text/x-jquery-tmpl">
<div>
    <h4> Uploaded sets </h4>
        <div class="sets">
            {{each(index, set) sets}}
                <div class="set">
                    <label>
                        <div class="cover">
                            <img class="thumb" id="${set.primary}" src="http://farm${set.farm}.staticflickr.com/${set.server}/${set.primary}_${set.secret}_s.jpg" style="margin: 0 auto; display: block">
                        </div>
                    </label>
                    <div style="thumb-title">                        
                        ${set.title}<br/>
                    <a target="_blank" href="http://flickr.com/photos/<%= @user.flickr_user_nsid %>/sets/${set.id}">
                        <img style="vertical-align: middle" src="/assets/flickrico.png">
                    </a>
                        {{each(idx, album) set.fb_albums}}
                            <a href="http://facebook.com/${album}"><img style="vertical-align: middle" src="/assets/fbico.png"></a>
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        </div>
</div>
</script>



<div id="modal-share-friends" class="modal hide fade">
  <div class="modal-header">
    <a href="#" class="close">&times;</a>
    <h3>Share photos with your friends</h3>
  </div>
  <div class="modal-body">
    <p>Once uploaded, all photos and albums are by default private. Pick albums that you want to share with your Friends or Family.</p>
    <img class="share-photos-image" src="/assets/album-privacy-settings.jpg">
  </div>
  <div class="modal-footer">
    <a href="http://facebook.com/" target="_blank" class="btn primary">Go to Facebook</a>
    <a href="#" id="dialog-close" class="btn secondary">Close</a>
  </div>
</div>
<% end %>

<% end %>