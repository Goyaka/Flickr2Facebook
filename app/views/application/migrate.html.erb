<% content_for :content do %>

<div class="main">
    <% if @fb_user and @flickr_user %>
        <div class="alert-message block-message success">
            <b> Congrats!</b> You have now authenticated both <a href="http://facebook.com/<%= @fb_user %>"> Facebook </a> and 
            <a href="http://flickr.com/<%= @user.flickr_user_nsid %>"> Flickr</a> accounts.
            <div class="row">
                <div class="span5"></div>
                <div class="span2"><img src="https://graph.facebook.com/me/picture?type=normal&access_token=<%= @client.access_token %>"> </div>
                <div class="span5 pull-down"> Logged into Facebook as <a href="http://facebook.com/<%= @fb_user %>"><%= @fb_user %> </a>.<br> Flickr as <a href="http://flickr.com/<%= @user.flickr_user_nsid %>"> <%= @flickr_user %> </a></div>
            </div>
            
        </div>
        <div id="sets">
        </div>
    <% else %>
    <% end %>
</div>


<script type="text/javascript">
var fb_user;
var flickr_user;
<% if @fb_user %>
fb_user = "<%= @fb_user %>";
<% end %>
<% if @flickr_user %>
flickr_user = "<%= @flickr_user %>";
<% end %>
</script>

<% if @fb_user and @flickr_user %>
<script id="sets_list_template" type="text/x-jquery-tmpl">
<div>

    <div id="select_all_wrapper" class="pull-right span2"> <label for="select_all">Select all</label><input type="checkbox" id="select_all"></div>

    <h2> Choose Flickr sets that you want to migrate to Facebook. </h2>
    <%= form_tag("flickr/import-sets", :method => "post") do %>
        <div class="sets">
            {{each(index, set) sets}}
                <div class="set">
                    <label>
                        <div class="cover">
                            <img id="${set.primary}" src="/assets/circle-loading.gif" style="margin: 0 auto; display: block">
                        </div>
                        <div style="font-size: 0.8em; font-weight: bold">
                        <input type="checkbox" onclick="_gaq.push(['_trackEvent', 'Select_Sets', '#{set.id}']);" name="set[]" value="${set.id}" id="${set.id}">
                        ${set.title} 
                        <a target="_blank" href="http://flickr.com/photos/<%= @user.flickr_user_nsid %>/sets/${set.id}">
                            <img style="padding: 2px 5px; vertical-align: top" src="/assets/external-link.png">
                        </a>
                        </div>
                    </label>
                </div>
            {{/each}}
        </div>
        <center class="push-down">
            <button class="btn large success"> Import Sets Now! </button>
        </center>
    <% end %>
</div>
</script>
<% end %>

<% end %>
